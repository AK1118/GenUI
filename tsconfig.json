{
  "ts-node": {
    "esm": true,
  },
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "strict": false,
    "outDir": "./dist",
    "declarationMap": false,
    "declaration": false,// 不需要自动生成声明文件，自动生成的文件太过冗余
    "baseUrl": "src/",
    "paths": {
      "@/core/*": ["core/*"],
      "@/*": ["*"],
      "Serialization": ["types/serialization.d.ts"],
      "Graphics": ["types/graphics.d.ts"],
      "Gesti": ["types/gesti.d.ts"],
      "Hooks": ["types/hooks.d.ts"]
    }
  },
  "include": ["src/**/*", "webpack.config.ts"],
  "exclude": ["./dist"]
}
